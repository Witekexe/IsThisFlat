<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IsThisFlat.CreditsPage"
             Title="Credits"
             BackgroundColor="White">
    <Grid RowSpacing="20"
          Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Text="Developed by Vít Čavojský"
               FontFamily="Segoe UI"
               FontSize="Large"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               TextColor="Black" />
        <StackLayout Grid.Row="1"
                     Grid.Column="0"
                     Spacing="20">
            <Label Text="2024"
                   FontFamily="Segoe UI"
                   FontSize="Medium"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   TextColor="Black" />
            <Label Text="Designed in Liberec   Made in Jablonec"
                   FontFamily="Segoe UI"
                   FontSize="Small"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   TextColor="Black" />
        </StackLayout>
    </Grid>
</ContentPage>